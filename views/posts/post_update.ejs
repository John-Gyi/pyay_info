        <div class="container-fluid">
          <h1 class="mt-2">Post Update</h1>
          <div class="page-inner mt--6">
            <div class="row mt--2">
              <div class="col-md-12">
                <div class="card full-height bg-light">
                  <div class="card-body ">
                    <div class="card-title">Update Your Post</div>
                    <div class="card-category">Hey Guy, Please Update</div>
                    <!-- <div class="d-flex flex-wrap justify-content-around pb-2 pt-4"> -->
                    <form action="/posts/postupdate/<%=postupd._id%>" method="post">
                      <div class="form-group">
                        <label for="category">Category:</label>
                        <select class="form-control" id="category" name="category_type">
                          <option value="<%postupd._id%>"> <%=postupd.category_type%></option>
                          <option value="pagodas">pagodas</option>
                          <option value="delecious food">delecious food</option>
                          <option value="beautiful places">beautiful places</option>
                          <option value="universities">universities</option>
                          <option value="donation schools">donation schools</option>
                        </select>

                      </div>
                      <div class="form-group">
                        <label for="title">Title:</label>
                        <input type="text" class="form-control" id="title" name="title" aria-describedby="titleHelp" value="<%=postupd.title%>">
                      </div>
                      <div class="form-group">
                        <label for="content">Content:</label>
                        <!-- <input type="text" class="form-control" id="content" name="content" aria-describedby="contentHelp" value="<%=postupd.content%>"> -->
                        <textarea class="form-control rounded-0" id="content" name="content" rows="10"><%=postupd.content%></textarea>
                      </div>
                      <div class="form-group">
                        <label for="image">Image:</label>
                        <input type="text" class="form-control" id="image" name="image_url" aria-describedby="imgHelp">
                      </div>

                      <div class="card-action">
                        <button type="submit" class="btn btn-success">Submit</button>
                        <button type="reset" class="btn btn-danger">Cancel</button>
                      </div>
                    </form>

                  </div>
                </div>
              </div>


            </div>
